extends ./_layout.pug

block content
	.p-wrap
		.c-loading
			.c-loading__ring
				div
				div
				div
				div
		.p-sidebar
			a#btnId(href="#").c-sideButton
			nav.p-nav
				.h-d-flex
					h2#week.h1.h-flex-1
					div
						p#date.h6.h-text-right.h-mb-1
						p.small-text-1 身分證末碼為<strong class="h5 h-text-notice h-mx-1" id="idCard"></strong>可購買
				.h-d-flex.h-my-2
					select#county(name="county").p-select
					select#countyTown(name="countyTown").p-select
				#search.c-shrinkIcon
					input#searchText(type="text" name="search" placeholder="搜尋地址..." ).c-shrinkIcon__input
					a(href="#").c-shrinkIcon__icon.fas.fa-search
			#sideData.p-sideContent
		.p-map#mapId
